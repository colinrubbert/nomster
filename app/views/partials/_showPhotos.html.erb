<h1 class="center">Photos</h1>
<hr />
<br />
<% @place.photos.each do |photo| %>
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0">
    <%= image_tag photo.picture, :class => 'img-responsive center' %>
    <div class="photo_cap center">
      <%= photo.caption %>
    </div>
    <% if current_user && current_user == @place.user %>
      <%= link_to 'Delete Photo', place_photo_path(@place, photo), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'}, :class => 'btn btn-danger pull-right' %>
    <% end %>
  </div>
  <br />
<% end %>

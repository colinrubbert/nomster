<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'burger.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Find the best food and drink!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'tea.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Want to relax with a cup of tea?
      </div>
    </div>
    <div class="item">
      <%= image_tag 'cappuccino.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Need to get wired? Grab the best cup of joe!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'italian.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Italian for the whole family!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'pizza.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Grab a slice!
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
